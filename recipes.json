{
    "build": {
        "cmd": "cargo build",
        "cwd": "../../rust/waves/"
    },
    "py": {
        "cmd": "python",
        "adapter": {
            "kind": "term"
        }
    },
    "luacheck": {
        "cmd": "luac %"
    },
    "lua-repl": {
        "cmd": "lua",
        "adapter": {
            "kind": "term"
        },
        "restart": true
    },
    "local_find": {
        "cmd": "find . -type f",
        "action": "loc"
    },
    "debug-rust": {
        "cmd": "cargo build",
        "action": {
            "name": "dap",
            "opts": {
                "program": "./target/debug/myprogram"
            }
        }
    }
}
