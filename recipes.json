{
    "build": {
        "cmd": "cargo build",
        "cwd": "../../rust/waves/"
    },
    "py": {
        "cmd": "python",
        "kind": "term"
    },
    "luacheck": {
        "cmd": "luac %"
    },
    "lua-repl": {
        "cmd": "lua",
        "kind": "term",
        "restart": true
    },
    "local_find": {
        "cmd": "find . -type f"
    },
    "debug-rust": {
        "cmd": "cargo build",
        "kind": "dap",
        "opts": {
            "program": "./target/debug/myprogram"
        }
    }
}
